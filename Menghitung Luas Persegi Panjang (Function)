#include <iostream>
#include <conio>

float luasPersegiPanjang(float panjang, float lebar){
  return panjang * lebar;
}

int main(){
  cout << "Program C++ Menghitung Luas Persegi Panjang" << endl;
  cout << "===========================================" << endl;
  cout << endl;

  float p, l, luas;

  cout << "Input panjang persegi: ";
  cin >> p;
  cout << "Input lebar persegi: ";
  cin >> l;
  cout << endl;

  luas = luasPersegiPanjang(p, l);

  cout << "Luas persegi panjang = " << luas << endl;
  cout << endl;

  getch();

}
