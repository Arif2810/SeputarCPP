#include <iostream>
#include <conio>

int main(){
	cout << " Program C++ Segitiga Angka " << endl;
   cout << "============================" << endl;
   cout << endl;

   int tinggi_segitiga, i, j, k;

   cout << "Input tinggi segitiga: ";
   cin >> tinggi_segitiga;
   cout << endl;

   for(i = 1; i <= tinggi_segitiga; i++){
   	k = 0;
      for(j = 1; j <= i; j++){
      	k++;
         cout << k << " ";
      }
      cout << endl;
   }
   getch();
}
